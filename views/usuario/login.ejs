<body>
  <div class="container margem caixilha">
    <h1>LOGIN USUÁRIO</h1>
    <% if(status==1) {%>
      <div style="background-color: rgb(233, 15, 15)">
        Email e/ou senha invalido
      </div>
      <% } %>
        <form action="/usuario/login" method="POST">
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Email</label>
            <input type="text" required name="email" class="form-control" id="email">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Senha</label>
            <input type="password" name="senha" class="form-control" id="senha">
          </div>
          <button type="submit" class="btn btn-primary">Enviar</button>
          <a href="/usuario/cadastrar">
            <button type="button" class="btn btn-secondary">Cadastrar usuário</button>
          </a>

        </form>
  </div>




</body>



</html>